{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "rootDir": "src",
    "outDir": "lib",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "importHelpers": true,
    "esModuleInterop": true,
    "strict": true,
    "noImplicitAny": false
  },
  "include": [
    "src/**/*"
  ]
}
